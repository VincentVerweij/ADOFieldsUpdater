{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug Fixes",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Miscellaneous",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "Refactoring",
      "hidden": true
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": false
    },
    {
      "type": "build",
      "section": "Miscellaneous",
      "hidden": false
    }
  ],
  "packages": {
    ".": {
      "component": "App",
      "extra-files": [
        {
          "type": "xml",
          "path": "App/App.csproj",
          "xpath": "//Project/PropertyGroup/Version"
        },
        {
          "type": "xml",
          "path": "App/App.csproj",
          "xpath": "//Project/PropertyGroup/PackageVersion"
        }
      ]
    }
  }
}
